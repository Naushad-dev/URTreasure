<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ExploreFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:text="Explore"
    android:gravity="center"
    android:textSize="50dp"
    android:textColor="@color/btn_color"
    android:textStyle="bold"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardElevation="10dp"
            app:strokeColor="@color/btn_color"
            app:strokeWidth="3dp"
            android:paddingBottom="5dp"
            android:layout_margin="25dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Books / Notes"
                    android:textSize="40dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="Get all Books and Notes related to Engineering "
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/notes_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="240dp"
                    android:background="@drawable/ic_baseline_navigate_next_24"
                    android:backgroundTint="@color/btn_color"

                    android:textColor="@color/btn_color"
                    android:textColorHint="@color/btn_color"
                    app:backgroundTint="@color/btn_color"
                    app:iconTint="@color/btn_color"
                    app:strokeColor="@color/btn_color"
                    app:strokeWidth="2dp" />


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardElevation="10dp"
            app:strokeColor="@color/btn_color"
            app:strokeWidth="3dp"
            android:paddingBottom="5dp"
            android:layout_margin="25dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="E-Class"
                    android:textSize="40dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="Get videos and Playlist Related Coding , Engineering and More !"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/yt_video_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="240dp"
                    android:background="@drawable/ic_baseline_navigate_next_24"
                    android:backgroundTint="@color/btn_color"

                    android:textColor="@color/btn_color"
                    android:textColorHint="@color/btn_color"
                    app:backgroundTint="@color/btn_color"
                    app:iconTint="@color/btn_color"
                    app:strokeColor="@color/btn_color"
                    app:strokeWidth="2dp" />


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardElevation="10dp"
            app:strokeColor="@color/btn_color"
            app:strokeWidth="3dp"
            android:paddingBottom="5dp"
            android:layout_margin="25dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ToolBox"
                    android:textSize="40dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="Scientific Calculator and much more.. "
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sci_Calc_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="240dp"
                    android:background="@drawable/ic_baseline_navigate_next_24"
                    android:backgroundTint="@color/btn_color"

                    android:textColor="@color/btn_color"
                    android:textColorHint="@color/btn_color"
                    app:backgroundTint="@color/btn_color"
                    app:iconTint="@color/btn_color"
                    app:strokeColor="@color/btn_color"
                    app:strokeWidth="2dp" />


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>




</ScrollView>