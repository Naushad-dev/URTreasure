<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:foregroundTint="@color/btn_color">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.PostDescFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/holderimg"
                android:layout_width="match_parent"
                android:layout_height="326dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_outline_image_24" />

            <TextView
                android:id="@+id/holder_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="18dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="20dp"
                android:text="Title"
                android:textSize="40dp"
                android:textStyle="bold"


                />

            <TextView
                android:id="@+id/holder_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="20dp"
                android:text="Description"
                android:textSize="24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="18dp"
                android:elevation="8dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="116dp"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/Rimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/Rtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@+id/Rimg"
                        android:layout_toRightOf="@id/Rimg"
                        android:text="This is Demo Name"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/userpostProfile_branch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Rtitle"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="9dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="36dp"
                        android:layout_toEndOf="@+id/Rimg"
                        android:layout_toRightOf="@id/Rimg"
                        android:text="This is Course Name"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/userpostProfile_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/userpostProfile_branch"
                        android:layout_alignBottom="@+id/Rimg"
                        android:layout_marginStart="9dp"
                        android:layout_marginLeft="9dp"

                        android:layout_marginEnd="77dp"
                        android:layout_marginBottom="-4dp"
                        android:layout_toEndOf="@+id/Rimg"
                        android:text="TextView" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/floatingActionButton"
                        android:layout_width="55dp"
                        android:layout_height="49dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:clickable="true"
                        android:theme="@style/TextAppearance.Compat.Notification.Info.Media"
                        android:tint="@color/btn_color"
                        app:backgroundTint="@color/btn_color"
                        app:rippleColor="@color/btn_color"
                        app:srcCompat="@drawable/ic_round_chat_24" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </FrameLayout>
</ScrollView>